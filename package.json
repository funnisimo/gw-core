{
    "name": "gw-utils",
    "version": "0.6.0",
    "description": "Basic Roguelike functionality",
    "main": "dist/gw-utils.js",
    "browser": "dist/gw-utils.min.js",
    "module": "dist/gw-utils.mjs",
    "types": "dist/gw-utils.d.ts",
    "devDependencies": {
        "@babel/types": "^7.12.10",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.6",
        "@rollup/plugin-typescript": "^8.3.1",
        "@types/jest": "^27.0",
        "http-server": "^14.1.0",
        "jest": "^27.0",
        "jest-extended": "^0.11.5",
        "lodash": "^4.17.21",
        "prettier": "^2.2.1",
        "replace": "^1.2.0",
        "rollup": "^2.60.0",
        "rollup-plugin-dts": "^4.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "ts-jest": "^27.0",
        "tslib": "^2.3.1",
        "typescript": "^4.5.2"
    },
    "scripts": {
        "copy": "cp dist/gw-utils.js* docs/js",
        "fixTypes": "replace '\\*\\W+TSIGNORE\\W*(\n)(\\W*)(\\*\\/)' '$3$1$2// @ts-ignore$1' dist/gw-utils.d.ts",
        "compile": "rollup -c",
        "build": "npm run compile && npm run fixTypes && npm run copy",
        "serve": "cd docs && http-server -p 8080",
        "test": "jest",
        "coverage": "jest --coverage",
        "test-debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "version": "node -e 'const v = require(\"./package.json\").version; console.log(v);' > docs/VERSION"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/funnisimo/gw-utils.git"
    },
    "keywords": [
        "Roguelike"
    ],
    "author": "Funnisimo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/funnisimo/gw-utils/issues"
    },
    "homepage": "https://github.com/funnisimo/gw-utils#readme",
    "files": [
        "dist"
    ],
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "dependencies": {
        "@types/lodash": "^4.14.178"
    }
}
