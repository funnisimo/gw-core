{
    "include": ["ts"],
    "exclude": ["ts/**/*.spec.ts"],
    "compilerOptions": {
        "strict": true,
        "module": "es6",
        "outDir": "dist",
        "target": "esNext",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "declaration": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,

        // see: https://github.com/Swatinem/rollup-plugin-dts/issues/156
        "useDefineForClassFields": false,
    },
}
